<div class="container-fluid"  ng-app="ts" ng-controller="LoginController as main">
	<fieldset>
		<h1>Login</h1>
		<div class="form-group">
			<label for="email">Email : </label>
			<input id="email" class="form-control" type="email" ng-change="main.requestStatus=0" ng-model="main.email" placeholder="Email">
		</div>
		<div class="form-group">
			<label for="password">Password : </label>
			<input id="password" ng-change="main.requestStatus=0 "class="form-control" type="password" ng-model="main.password" placeholder="password">
		</div>
		<div class="form-group">
			<button class="btn btn-default" ng-click="main.login()">Log In</button>
		</div>
	</fieldset>
	<div class="alert alert-warning" ng-if="main.requestStatus==-1">
		Login-in
	</div>
	<div class="alert alert-danger" ng-if="main.requestStatus==403">
		Your email or password is incorrect
	</div>
	<div class="alert alert-danger" ng-if="main.requestStatus==500">
		Somthing went wrong on the server please contact us !
	</div>
	<div class="alert alert-success" ng-if="main.requestStatus==200">
		Success
	</div>
</div>
